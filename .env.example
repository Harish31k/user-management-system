# =========================
# Copy this file to .env and fill in values for local development
# =========================

# SERVER
SERVER_PORT=8080

# JWT — must be at least 32 characters
JWT_SECRET=dev-secret-key-must-be-at-least-32-chars-long!!
JWT_EXPIRATION=3600000

# MYSQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=userdb
MYSQL_USERNAME=root
MYSQL_PASSWORD=root

# KAFKA — use localhost:9092 for local dev, kafka:9092 inside Docker
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# HIBERNATE DDL — use 'update' for local dev, 'validate' for Docker
DDL_AUTO=update
